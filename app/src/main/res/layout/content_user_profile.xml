        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/tv_contact_user_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#ff6600"
                android:text=""
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_contact_job_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/tv_contact_user_name_1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#1967CC"
                android:text=""
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_contact_company_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/tv_contact_job_title_1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#ff6600"
                android:text=""
                android:textSize="17dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#E97868"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EAEFEF"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/tv_phone_or_mobile_contact_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ff6600"
                            android:text="Phone/Mobile"
                            android:textSize="17dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_phone_or_mobile_contact_11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_phone_or_mobile_contact_1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#1967CC"
                            android:text=""
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="#E97868"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#E97868"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EAEFEF"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/tv_contact_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ff6600"
                            android:text="Email"
                            android:textSize="17dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_contact_22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_contact_2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#1967CC"
                            android:text=""
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="#E97868"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#E97868"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EAEFEF"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/tv_contact_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ff6600"
                            android:text="Job Title"
                            android:textSize="17dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_contact_33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_contact_3"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#1967CC"
                            android:text=""
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="#E97868"/>

                <Button
                    android:id="@+id/b_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textColor="#FF6600"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:text="Edit" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
