<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_lc1_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rashida Sultana"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:textColor="#66BFD5"
        android:textStyle="italic|bold|normal"
        />
    <TextView
        android:id="@+id/tv_lc1_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Software Engineer"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:textColor="#CC9902"
        android:textStyle="italic|bold|normal"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_call"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/tv_lc1_cell"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="01723598606"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold|normal"
        android:textColor="#ffffff"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/tv_lc1_full_email"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="rashida.cse@gmail.com"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold|normal"
        android:textColor="#ffffff"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_compass"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/tv_lc1_website"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="shadhiin.com"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold|normal"
        android:textColor="#ffffff"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_mylocation"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/tv_lc1_address"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="168, Shantiniketon, Gulshan-1."
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold|normal"
        android:textColor="#ffffff"
        />
</LinearLayout>
