<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="#ffffff"
                android:dashGap="3dp"
                android:dashWidth="3dp" />

            <solid android:color="#00000000" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>